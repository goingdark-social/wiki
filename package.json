{
  "name": "goingdark-wiki",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build && node scripts/generate-sitemap.js",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:a11y": "npx pa11y-ci --sitemap http://localhost:4321/sitemap.xml --sitemap-find https://wiki.goingdark.social --sitemap-replace http://localhost:4321 -T 0",
    "test:a11y:local": "node scripts/generate-sitemap.js && npx pa11y-ci --sitemap public/sitemap.xml -T 0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/mdx": "^4.3.1",
    "@astrojs/react": "^4.4.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "astro": "^5.1.2",
    "clsx": "^2.1.0",
    "lucide": "^0.563.0",
    "lucide-react": "^0.563.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "^2.3.9",
    "@eslint/js": "^9.39.2",
    "@hint/hint-axe": "^4.4.21",
    "@tailwindcss/node": "^4.1.18",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-mdx": "^3.6.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-tailwindcss": "^4.0.0-beta.0",
    "globals": "^17.0.0",
    "hint": "^7.1.13",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mdx2vast": "^0.3.1",
    "pa11y-ci": "^4.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
