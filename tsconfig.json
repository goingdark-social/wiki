{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "exclude": [
    ".astro/**",
    "public",
    "dist",
    "node_modules",
    "public/**/dist",
    "**/dist/**"
  ]
}