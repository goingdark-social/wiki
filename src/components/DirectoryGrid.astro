---
/**
 * DirectoryGrid - Category browsing grid for documentation sections
 * Extracted from index.astro to support MDX-driven architecture
 */
import { getCollection } from 'astro:content';
import Icon from './Icon.astro';
import type { DocEntry } from '@/types/content';

// Get all docs
// Note: Astro's content layer caches this data, so multiple getCollection calls
// in different components don't cause duplicate fetches
const allDocs = await getCollection('docs');

// Group docs by top-level folder with proper structure
interface Section {
  title: string;
  folder: string;
  pages: DocEntry[];
  indexPage?: DocEntry;
}

const sections: Section[] = [];
const folderMap = new Map<string, Section>();

allDocs.forEach((doc: DocEntry) => {
  const slug = typeof doc.slug === 'string' ? doc.slug : '';
  const [folder] = slug.split('/');
  if (folder === 'index') return; // Skip root index

  if (!folderMap.has(folder)) {
    const section: Section = {
      title: folder.charAt(0).toUpperCase() + folder.slice(1),
      folder: folder,
      pages: [],
    };
    folderMap.set(folder, section);
    sections.push(section);
  }

  const section = folderMap.get(folder);
  
  if (section) {
    // Check if this is the index page for the folder
    if (doc.slug === folder || doc.slug === `${folder}/index`) {
    section.indexPage = doc;
    section.title = (doc.data && typeof doc.data.title === 'string') ? doc.data.title : section.title; // Use actual title from index
    } else {
      section.pages.push(doc);
    }
  }
});
---

<section aria-label="Documentation categories" class="directory-section">
  <div class="directory-pattern">
    <h2 class="directory-title">
      <div class="directory-icon">
        <Icon name="folder" size={24} class="text-white" />
      </div>
      <span>Explore Our Wiki</span>
    </h2>
    <p class="directory-description">Find everything you need to know about our community, policies, and how to get started.</p>
  </div>

  <div class="directory-grid">
    {sections.map((section, index) => (
      <article class={`directory-card ${index % 2 === 0 ? 'pattern-noise' : ''}`}>
        {/* Category Header */}
        <div class="directory-card-header">
          {section.indexPage ? (
            <a href={`/docs/${section.folder}`} class="directory-link-styled">
              <h3 class="directory-link-title">
                <div class="directory-link-icon">
                  <Icon name="folder" size={20} class="directory-link-icon-inner" />
                </div>
                <span>{section.title}</span>
              </h3>
              <span class="directory-badge">
                {section.pages.length} {section.pages.length === 1 ? 'page' : 'pages'}
              </span>
            </a>
          ) : (
            <div class="directory-header">
              <h3 class="directory-title">
                <div class="directory-link-icon">
                  <Icon name="folder" size={20} class="directory-link-icon-inner" />
                </div>
                {section.title}
              </h3>
              <span class="directory-badge">
                {section.pages.length} {section.pages.length === 1 ? 'page' : 'pages'}
              </span>
            </div>
          )}
        </div>

        {/* Top Pages Preview (shows 3-4 pages) */}
        <ul class="directory-pages">
          {section.pages.slice(0, 4).map((page: DocEntry) => (
            <li>
              <a
                href={`/docs/${page.slug}`}
                class="directory-page-link-styled"
              >
                <span class="directory-page-link-arrow">â†’</span>
                <span class="directory-page-link-text">
                  {page.data && page.data.title ? page.data.title : page.slug}
                </span>
              </a>
            </li>
          ))}
          {section.pages.length > 4 && (
            <li class="pt-3">
              <a
                href={`/docs/${section.folder}`}
                class="directory-view-all-styled"
              >
                <span>View all {section.pages.length} pages</span>
                <Icon name="arrow-right" size={16} class="directory-view-all-icon" />
              </a>
            </li>
          )}
        </ul>
      </article>
    ))}
  </div>
</section>
