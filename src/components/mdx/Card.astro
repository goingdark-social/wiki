---
interface Props {
  title: string;
  icon?: string;
  href?: string;
}

const { title, icon, href } = Astro.props;
const Tag = href ? 'a' : 'div';
const linkProps = href ? { href, target: href.startsWith('http') ? '_blank' : undefined, rel: href.startsWith('http') ? 'noopener noreferrer' : undefined } : {};
---

<Tag
  class="card-full-styled"
  {...linkProps}
>
  {icon && (
    <div class="card-icon">
      {icon}
    </div>
  )}
  <h3 class="card-title">
    {title}
    {href && (
      <svg class="card-title-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
      </svg>
    )}
  </h3>
  <div class="card-description">
    <slot />
  </div>
</Tag>
