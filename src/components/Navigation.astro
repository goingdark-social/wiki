---
import { getCollection } from 'astro:content';
import Search from './Search.tsx';

// Get all docs for search
const allDocs = await getCollection('docs');
const docsForSearch = allDocs.map(doc => ({
  slug: doc.slug,
  title: doc.data.title,
  description: doc.data.description,
}));
---

<nav class="nav-main">
  <div class="container-content">
    <div class="nav-header">
      <!-- Logo and Brand -->
      <div class="nav-left">
        <a href="/" class="nav-logo-link-styled">
          <div class="nav-logo-icon">
            <svg class="nav-logo-svg" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <div class="nav-brand">
            <h1 class="nav-brand-title">goingdark.social</h1>
            <p class="nav-brand-subtitle">Community Wiki</p>
          </div>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="nav-desktop">
        <!-- Search Bar -->
        <div class="nav-search-container">
          <Search docs={docsForSearch} client:idle />
        </div>

        <div class="nav-divider"></div>

        <a
          href="https://goingdark.social"
          target="_blank"
          rel="noopener noreferrer"
          class="nav-join-link-styled"
        >
          <span>Join Instance</span>
          <svg class="nav-join-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="mobile-menu-btn"
        aria-label="Open navigation menu"
      >
        <svg class="mobile-menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

</nav>

<script>
  // Only keep the mobile button in the DOM on small viewports.
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const desktopQuery = window.matchMedia('(min-width: 768px)');

  function handleViewportChange(e) {
    if (!mobileMenuButton) return;
    if (e.matches) {
      // Desktop: remove button from DOM to avoid duplicate controls
      mobileMenuButton.remove();
    } else {
      // Mobile: ensure listener is attached
      if (!mobileMenuButton.__listenerAttached) {
        mobileMenuButton.addEventListener('click', (ev) => {
          ev.preventDefault();
          window.dispatchEvent(new CustomEvent('open-sidebar'));
        });
        mobileMenuButton.__listenerAttached = true;
      }
    }
  }

  // Initial check
  handleViewportChange(desktopQuery);
  // Listen for changes
  desktopQuery.addEventListener('change', handleViewportChange);
</script>
