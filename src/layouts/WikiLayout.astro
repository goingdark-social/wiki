---
import { getCollection } from 'astro:content';
import Navigation from '../components/Navigation.astro';
import Sidebar from '../components/Sidebar.astro';
import Icon from '../components/Icon.astro';
import '../styles/global.css';

import type { NavItem } from '../utils/navigation';

interface Props {
  title?: string;
  description?: string;
  headings?: Array<{ depth: number; text: string; slug: string }>;
  currentSlug?: string;
  prevPage?: NavItem | null;
  nextPage?: NavItem | null;
}

const {
  title = 'goingdark.social Wiki',
  description = 'Documentation and wiki for goingdark.social - a privacy-focused Mastodon instance',
  headings = [],
  currentSlug = '',
  prevPage = null,
  nextPage = null
} = Astro.props;

const fullTitle = title === 'goingdark.social Wiki' ? title : `${title} | goingdark.social Wiki`;
const isDocsPage = Astro.url.pathname.startsWith('/docs');

// Build breadcrumb path with actual titles
let breadcrumbPath: Array<{ title: string; href: string }> = [];
import type { DocEntry } from '@/types/content';

if (currentSlug) {
  const allDocs = await getCollection('docs');
  const slugParts = currentSlug.split('/');
  
  for (let i = 0; i < slugParts.length; i++) {
  const partialSlug = slugParts.slice(0, i + 1).join('/');
  // Try to find the index page for this path
  const doc = allDocs.find((d: DocEntry) => d.slug === partialSlug || d.slug === `${partialSlug}/index`);
    
    if (doc) {
      breadcrumbPath.push({
        title: doc.data.title,
        href: `/docs/${partialSlug}`
      });
    } else if (i === slugParts.length - 1) {
      // Last part, use the current title
      breadcrumbPath.push({
        title: title,
        href: `/docs/${partialSlug}`
      });
    }
  }
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;600;700;800&family=Source+Sans+3:wght@400;500;600;700&family=JetBrains+Mono:wght@400;600&display=swap" rel="stylesheet" />
  </head>
  <body class="body-layout">
    <Navigation />

    <!-- Mobile Sidebar (Drawer) - Available on all pages -->
      <div 
        id="mobile-sidebar-overlay" 
        class="mobile-sidebar-overlay hidden"
        role="dialog"
        aria-modal="true"
        aria-labelledby="mobile-sidebar-title"
      >
        <!-- Backdrop with glassmorphism -->
        <div class="mobile-sidebar-backdrop" aria-hidden="true"></div>

        <!-- Drawer with improved styling -->
        <nav id="mobile-sidebar" class="mobile-sidebar-drawer" aria-label="Mobile navigation">
          <!-- Header - Kept visible with blur -->
          <div class="mobile-sidebar-header">
            <div class="mobile-header">
              <h2 id="mobile-sidebar-title" class="mobile-title">
                Navigation
              </h2>
              <button
                id="mobile-sidebar-close"
                class="mobile-sidebar-close"
                aria-label="Close menu"
              >
                <svg class="mobile-close-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
            
            <!-- Search inside mobile menu -->
            <div class="relative">
              <input
                type="text"
                placeholder="Search wiki..."
                class="mobile-search-input"
                aria-label="Quick search"
              />
              <svg
                class="search-icon-layout"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
          </div>

          <!-- Content -->
          <div class="p-5">
            {isDocsPage ? (
              <Sidebar />
            ) : (
              <nav aria-label="Main navigation">
                <ul class="space-y-2">
                  <li>
                    <a href="/" class="mobile-nav-home">
                      <Icon name="home" size={16} />
                      Wiki Home
                    </a>
                  </li>
                  <li>
                    <a href="/docs/user/getting-started" class="mobile-nav-link-styled">
                      <Icon name="arrow-right" size={16} class="mobile-nav-icon" />
                      Getting Started
                    </a>
                  </li>
                  <li>
                    <a href="/docs/policies/rules" class="mobile-nav-link-styled">
                      <Icon name="arrow-right" size={16} class="mobile-nav-icon" />
                      Community Rules
                    </a>
                  </li>
                  <li>
                    <a href="/docs/legal/privacy" class="mobile-nav-link-styled">
                      <Icon name="arrow-right" size={16} class="mobile-nav-icon" />
                      Privacy Policy
                    </a>
                  </li>
                  <li class="footer-border">
                    <a href="https://goingdark.social" target="_blank" rel="noopener noreferrer" class="btn-primary-full">
                      <span>Join Our Instance</span>
                      <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                      </svg>
                    </a>
                  </li>
                </ul>
              </nav>
            )}
          </div>
        </div>
      </div>

    <!-- Three Column Layout Container -->
    <div class="main-content">
      <div class:list={[
        "mx-auto flex items-start relative",
        isDocsPage ? "max-w-[1600px]" : "max-w-7xl"
      ]}>
        <!-- Docs Sidebar (Desktop Only) - Fixed width, sticky -->
        {isDocsPage && (
          <aside class="docs-sidebar-styled">
            <Sidebar />
          </aside>
        )}

        <!-- Main Content - Centered reading column -->
        <main class:list={[
          "flex-1 min-w-0 py-10",
          isDocsPage ? "px-4 lg:px-8 xl:px-12" : "px-4 sm:px-6 lg:px-8"
        ]}>
          <div class:list={[
            isDocsPage ? "mx-auto max-w-3xl xl:max-w-4xl" : "w-full"
          ]}>
          <!-- Breadcrumbs (only on docs pages) - Now showing actual titles -->
          {Astro.url.pathname !== '/' && breadcrumbPath.length > 0 && (
            <nav class="mb-6" aria-label="Breadcrumb">
              <ol class="breadcrumb-list">
                <li>
                  <a href="/" class="breadcrumb-home">
                    <Icon name="home" size={14} />
                    <span>Home</span>
                  </a>
                </li>
                {breadcrumbPath.map((crumb, i) => {
                  const isLast = i === breadcrumbPath.length - 1;
                  return (
                    <>
                      <li class="breadcrumb-item">
                        <Icon name="chevron-right" size={14} class="text-surface-600" />
                      </li>
                      <li>
                        {isLast ? (
                          <span class="breadcrumb-current">{crumb.title}</span>
                        ) : (
                          <a href={crumb.href} class="breadcrumb-link">
                            {crumb.title}
                          </a>
                        )}
                      </li>
                    </>
                  );
                })}
              </ol>
            </nav>
          )}

          <!-- Article Content Card -->
          <article class="wiki-content">
            <slot />
          </article>

          <!-- Next/Previous Navigation (Fixed Layout) -->
          {(prevPage || nextPage) && (
            <div class="pager-grid">
              {prevPage ? (
                <a
                  href={`/docs/${prevPage.slug}`}
                  class="pager-link-styled"
                >
                  <svg class="pager-link-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                  </svg>
                  <div class="pager-link-content">
                    <div class="pager-link-label">Previous</div>
                    <div class="pager-link-title-truncate-styled">{prevPage.title}</div>
                  </div>
                </a>
              ) : (
                <div class="col-span-1"></div>
              )}
              {nextPage ? (
                <a
                  href={`/docs/${nextPage.slug}`}
                  class="pager-link-next-styled"
                >
                  <div class="pager-link-content">
                    <div class="pager-link-label">Next</div>
                    <div class="pager-link-title-truncate-styled">{nextPage.title}</div>
                  </div>
                  <svg class="pager-link-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              ) : (
                <div class="col-span-1"></div>
              )}
            </div>
          )}

          <!-- Article Footer (Simplified) -->
          <div class="footer-section">
            <div class="footer-flex">
              {currentSlug && (
                <a
                  href={`https://github.com/theepicsaxguy/wiki/blob/main/src/content/docs/${currentSlug}.mdx`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="footer-link"
                >
                  <svg class="footer-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                  Edit this page
                </a>
              )}
              <span class="footer-text">
                Questions? <a href="mailto:admin@goingdark.social" class="footer-contact">Contact us</a>
              </span>
            </div>
          </div>
          </div>
        </main>

        <!-- Table of Contents Sidebar (Desktop Only) - Right rail -->
        {isDocsPage && headings.length > 0 && Astro.url.pathname !== '/' && (
        <aside class="toc-sidebar">
          <div class="space-y-6">
            <div>
              <h3 class="toc-title">
                <svg class="toc-title-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
                </svg>
                On this page
              </h3>
              <nav id="table-of-contents" class="toc-nav" aria-label="Table of contents">
                {headings.map((heading) => (
                  <a
                    href={`#${heading.slug}`}
                    class:list={[
                      "block py-2 px-3 rounded-lg text-text-muted hover:text-white hover:bg-surface-800 transition-all border-l-2 border-transparent hover:border-primary",
                      heading.depth === 3 ? "pl-6 text-xs" : "pl-3"
                    ]}
                    data-heading-link
                  >
                    {heading.text}
                  </a>
                ))}
              </nav>
            </div>
          </div>
        </aside>
        )}
      </div>
    </div>

    <!-- Footer -->
    <footer class="footer-main">
      <div class="footer-container">
        <div class="footer-grid">
          <div class="md:col-span-2">
            <div class="footer-brand">
              <div class="footer-logo">
                <svg class="footer-logo-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
              <div>
                <h3 class="footer-title">goingdark.social</h3>
                <p class="footer-subtitle">Privacy-focused Mastodon</p>
              </div>
            </div>
            <p class="footer-description">
              A community-driven, privacy-focused Mastodon instance. Part of the decentralized Fediverse. Join us in building a better social network.
            </p>
          </div>

          <div>
            <h3 class="footer-heading">Resources</h3>
            <ul class="space-y-3">
              <li><a href="/" class="footer-nav-link">
                <Icon name="arrow-right" size={14} class="footer-nav-icon" />
                Home
              </a></li>
              <li><a href="/docs/policies/rules" class="footer-nav-link">
                <Icon name="arrow-right" size={14} class="footer-nav-icon" />
                Server Rules
              </a></li>
              <li><a href="/docs/legal/privacy" class="footer-nav-link">
                <Icon name="arrow-right" size={14} class="footer-nav-icon" />
                Privacy Policy
              </a></li>
              <li><a href="https://joinmastodon.org/" target="_blank" rel="noopener noreferrer" class="footer-nav-link">
                <Icon name="arrow-right" size={14} class="footer-nav-icon" />
                Learn Mastodon
              </a></li>
            </ul>
          </div>

          <div>
            <h3 class="footer-heading">Get in Touch</h3>
            <ul class="footer-list">
              <li class="footer-contact-item">
                <svg class="footer-contact-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                admin@goingdark.social
              </li>
              <li class="footer-contact-item">
                <svg class="footer-contact-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                @admin@goingdark.social
              </li>
              <li class="footer-btn-item">
                <a href="https://goingdark.social" target="_blank" rel="noopener noreferrer" class="footer-btn">
                  <span>Join Now</span>
                  <svg class="footer-btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </svg>
                </a>
              </li>
            </ul>
          </div>
        </div>

        <div class="footer-bottom">
          <p class="footer-copyright">
            &copy; {new Date().getFullYear()} goingdark.social. Powered by <a href="https://joinmastodon.org/" target="_blank" rel="noopener noreferrer" class="footer-link-primary">Mastodon</a>.
          </p>
          <p class="footer-tagline">
            Built for <a href="https://goingdark.social" target="_blank" rel="noopener noreferrer" class="footer-link-primary">Goingdark</a> â€¢ Part of the Fediverse
          </p>
        </div>
      </div>
    </footer>

    <script>
      // Mobile Sidebar Toggle with improved accessibility
      const mobileOverlay = document.getElementById('mobile-sidebar-overlay');
      const mobileClose = document.getElementById('mobile-sidebar-close');
      const mobileSidebar = document.getElementById('mobile-sidebar');
      let previousFocus = null;

      if (mobileOverlay) {
        const closeSidebar = () => {
          mobileOverlay.classList.add('hidden');
          document.body.style.overflow = '';
          
          // Dispatch close event for navigation button
          window.dispatchEvent(new CustomEvent('close-sidebar'));
          
          // Restore focus to the element that opened the sidebar
          if (previousFocus) {
            previousFocus.focus();
            previousFocus = null;
          }
        };

        const openSidebar = () => {
          // Store the currently focused element
          previousFocus = document.activeElement;
          
          mobileOverlay.classList.remove('hidden');
          document.body.style.overflow = 'hidden';
          
          // Focus the close button for keyboard navigation
          setTimeout(() => {
            mobileClose?.focus();
          }, 100);
        };

        // Listen for custom event from Navigation component
        window.addEventListener('open-sidebar', (e) => {
          openSidebar();
        });

        mobileClose?.addEventListener('click', closeSidebar);
        
        // Close when clicking backdrop
        mobileOverlay.addEventListener('click', (e) => {
          if (e.target === mobileOverlay || (e.target instanceof HTMLElement && e.target.classList.contains('mobile-sidebar-backdrop'))) {
            closeSidebar();
          }
        });

        // Enhanced keyboard navigation
        document.addEventListener('keydown', (e) => {
          if (mobileOverlay.classList.contains('hidden')) return;
          
          if (e.key === 'Escape') {
            closeSidebar();
          } else if (e.key === 'Tab') {
            // Trap focus within the sidebar
            const focusableElements = mobileSidebar?.querySelectorAll(
              'button, [href], input, select, textarea, [tabindex]:not([tabindex="-1"])'
            );
            
            if (focusableElements && focusableElements.length > 0) {
              const firstElement = focusableElements[0];
              const lastElement = focusableElements[focusableElements.length - 1];
              
              if (e.shiftKey && document.activeElement === firstElement) {
                e.preventDefault();
                lastElement.focus();
              } else if (!e.shiftKey && document.activeElement === lastElement) {
                e.preventDefault();
                firstElement.focus();
              }
            }
          }
        });
      }

      // Table of Contents Active State (IntersectionObserver)
      document.addEventListener('DOMContentLoaded', () => {
        const headingLinks = document.querySelectorAll('[data-heading-link]');

        if (headingLinks.length === 0) return;

        const headings = Array.from(headingLinks).map(link => {
          const href = link.getAttribute('href');
          if (!href) return null;
          return document.querySelector(href);
        }).filter((el): el is Element => el !== null);

        if (headings.length === 0) return;

        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                const id = entry.target.id;
                headingLinks.forEach((link) => {
                  const href = link.getAttribute('href');
                  if (href === `#${id}`) {
                    link.classList.remove('text-text-muted', 'border-transparent', 'hover:bg-surface-800');
                    link.classList.add('text-white', 'border-primary', 'bg-surface-800', 'font-semibold');
                  } else {
                    link.classList.remove('text-white', 'border-primary', 'bg-surface-800', 'font-semibold');
                    link.classList.add('text-text-muted', 'border-transparent', 'hover:bg-surface-800');
                  }
                });
              }
            });
          },
          { rootMargin: '-100px 0px -66%' }
        );

        headings.forEach((heading) => observer.observe(heading));
      });

      // Smooth scroll for anchor links
      document.querySelectorAll<HTMLAnchorElement>('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const href = this.getAttribute('href');
          const target = href ? document.querySelector(href) : null;
          if (target) {
            target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        });
      });
    </script>
  </body>
</html>
